<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="0"
        android:gravity="right"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dpt"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:layout_below="@+id/btn8"
        android:text="5"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:text="9"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:text="5"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn"
        android:layout_toStartOf="@+id/btn"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:text="2"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/btn6"
        android:layout_alignRight="@+id/btn6"
        android:layout_below="@+id/btn5"
        android:text="3"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="100dpt"
        android:layout_height="100dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:text="/"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnDivision"
        android:layout_toEndOf="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:text="6"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="-"
        android:layout_below="@+id/btnMultiplication"
        android:layout_toRightOf="@+id/btn"
        android:layout_toEndOf="@+id/btn"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=" = "
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn"
        android:layout_toEndOf="@+id/btn"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="+"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btnPlus"
        android:layout_toRightOf="@+id/btnPlus"
        android:text="0"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:text="."
        android:textSize="50dp"/>
</RelativeLayout>